{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ORDER schema",
  "type": "object",
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "input": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "prompt": {
            "type": "string"
          },
          "output": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "postconditions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "file_exists": {
                  "type": "string"
                },
                "contains": {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string"
                    },
                    "must_include": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "file",
                    "must_include"
                  ]
                }
              },
              "additionalProperties": false
            }
          }
        },
        "required": [
          "role",
          "input",
          "prompt",
          "output"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "steps"
  ]
}